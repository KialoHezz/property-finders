<div class="property-main-photo" style="background-image: url('<%= property_photo_url @properties.last %>')">
  <div class="photo-overlay">

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md  -8">
      <div class="row">
        <div class="col-lg-5">
          <p class="h4 mb-2"><%= @account.full_name %></p>
          <p class="mb-2"><%= @account.company %></p>
        </div>
        <div class="col-lg-7 text-center">
          <div class="row mt-sm-3 bg-light p-3">
            <div class="col-3">
              <%= icon('fa-solid', 'bed')%>
              <span class="lead"><%= @properties_sold %><small>Sold</small><span>
            </div>
            <div class="col-3">
              <%= icon('fa-solid', 'bed')%>
              <span class="lead"><%= @properties_for_sale %><small>For Sale</small><span>
            </div>
            <div class="col-3">
              <%= icon('fa-solid', 'bath')%>
              <span class="lead"><%= @properties_leased %><small>Leased</small><span>
            </div>
            <div class="col-3">
              <i class="fas fa-car"></i>
              <span class="lead"><%= @properties_for_rent %><small>for_rent</small><span>
            </div>
          </div>          
        </div>
      </div>
      <div class="row  border-top border-bottom mt-5 mb-5 pt-4 pb-4">
        <div class="col-6">
          properties
        </div>
        <div class="col-6 text-right">
          <!--This will point to a new page -->
          <strong><%= link_to "Can I afford this property?", "#", class:"text-success" %></strong>
        </div>
        </div>
        <div class="row">
          <div class="col">
            <p class="h5">Description</p>
            
            <!-- wrapper -->
            <div id="prop-details" class="">
              <%= simple_format @account.details %>
            </div>
            
            <button class="btn btn-outline-info mt-3" id="details">Show More</button>
          </div> 
        </div>  
      </div>
      <div class="col-md-4">
          <%= render "properties/agent_details", agent: @account %>

     </div>
    </div>
  </div>
</div>

<section id="mt-5 mb-5">
<div class="container">
    <div class="row">
      <div class="col-12">
        <p class="h2 mb-3">Other Properties By this Agent</p>
      </div>
      <%= render "properties/list", properties: @properties %>
    </div>
</div>
</section>


<%= render "properties/send_email_modal", agent: @account %>